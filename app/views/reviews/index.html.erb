        <div class="thumbnail">
           <% @reviews.each do |review| %>
              <div class=container >
              <button type="button" class="btn btn-danger">Rating-<%= review.rating%>---</button>--<%= review.comment %>

                Rating-<%= review.rating%>---<!--  <%# review.user.email %>- -->--<%= review.comment %>
              </div><br/><br/><br/>

              <% if can? :update, review %>
                  <%= link_to  edit_review_path(review), class: "btn btn-info" do %>
                    <i class="glyphicon glyphicon-edit"></i> Edit Review
                  <% end %><br/>
              <% end %>

              <% if can? :delete, review %>
                  <%= link_to review_path(review), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary" do %>
                      <i class="glyphicon glyphicon-trash"></i> Delete
                    <% end %><br/>
              <% end %>
